    <script>
        //-------------- form validation ---------------
        function productValidation(){

            const productname = document.getElementById('productname');
            const brandname = document.getElementById('brandname');
            const gender = document.getElementById('gender');
            const productcategory = document.getElementById('productcategory');
            const color = document.getElementById('color');
            const price = document.getElementById('price');
            const quantity = document.getElementById('quantity');
            const size = document.getElementById('size');
            const description = document.getElementById('description');
            const image = document.getElementById('image');
            //----------Error feilds
            const productnameError = document.getElementById('productnameError');
            const brandnameError = document.getElementById('brandnameError');
            const genderError = document.getElementById('genderError');
            const productcategoryError = document.getElementById('productcategoryError');
            const colorError = document.getElementById('colorError');
            const priceError = document.getElementById('priceError');
            const quantityError = document.getElementById('quantityError');
            const sizeError = document.getElementById('sizeError');
            const descriptionError = document.getElementById('descriptionError');
            const imageError = document.getElementById('imageError');
            //-----------Regex   

            //* ------------- product name field ------------
            if(productname.value.trim() === ''){
                productnameError.innerHTML = 'You must enter the product name';
                setTimeout(() => {
                    productnameError.innerHTML = '';
                }, 2000);
                return false;
            }
            //* ------------- brand name field ------------
            if(brandname.value.trim() === ''){
                brandnameError.innerHTML = 'You must enter the brand name';
                setTimeout(() => {
                    brandnameError.innerHTML = '';
                }, 2000);
                return false;
            }
            //* ------------- gender field ------------
            if(gender.value === 'Choose Gender'){
                genderError.innerText = 'Please select a gender';
                setTimeout(() => {
                    genderError.innerText = '';
                }, 2000);
                return false; 
            }
            //* ------------- product category field ------------
            if(productcategory.value === 'Choose Category'){
                productcategoryError.innerText = 'Please select proper product category';
                setTimeout(() => {
                    productcategoryError.innerText = '';
                }, 2000);
                return false; 
            }
            //* ------------- color field ------------
            if(color.value === 'Choose Colour'){
                colorError.innerText = 'Please select proper color';
                setTimeout(() => {
                    colorError.innerText = '';
                }, 2000);
                return false; 
            }
            //* ------------- price  field ------------
            if(price.value.trim() === ''){
                priceError.innerHTML = 'You must enter the price';
                setTimeout(() => {
                    priceError.innerHTML = '';
                }, 2000);
                return false;
            }
            //* ------------- quantity  field ------------
            if(quantity.value.trim() === ''){
                quantityError.innerHTML = 'You must enter the quantity';
                setTimeout(() => {
                    quantityError.innerHTML = '';
                }, 2000);
                return false;
            }
            //* ------------- size field ------------
            if(size.value === 'Choose Size'){
                sizeError.innerText = 'Please select proper size';
                setTimeout(() => {
                    sizeError.innerText = '';
                }, 2000);
                return false; 
            }
            //* ------------- description  field ------------
            if(description.value.trim() === ''){
                descriptionError.innerHTML = 'You must enter the description';
                setTimeout(() => {
                    descriptionError.innerHTML = '';
                }, 2000);
                return false;
            }


        return true;
        }

        // ------------- image preview and remove --------------
        $(document).ready(function (){
            $("#image").on('change', function () {
                displaySelectedImages(this);
            });
        });
    
        function displaySelectedImages(input){
            var files = input.files;
            var imagesContainer = document.getElementById('images-container');
            imagesContainer.innerHTML = ''; // Clear previous images
    
            var fileNames = []; // Array to store selected image filenames
    
            for (var i = 0; i < files.length; i++) {
                var file = files[i];
                if (file.type.match('image.*')) {
                    var reader = new FileReader();
                    reader.onload = (function (file) {
                        return function (e) {
                            var container = document.createElement('div');
                            container.style.position = 'relative'; // Set container position
                            container.style.display = 'inline-block'; // Display images horizontally
    
                            var img = document.createElement('img');
                            img.src = e.target.result;
                            img.style.width = '150px'; // Set width for display
                            img.style.height = '150px'; // Set height for display
                            img.style.margin = '0px 10px'; // Set margin
                            container.appendChild(img);
    
                            // Create remove button
                            var removeBtn = document.createElement('p');
                            removeBtn.innerHTML = 'X';
                            removeBtn.style.position = 'absolute'; // Set button position
                            removeBtn.style.color = "black"
                            removeBtn.style.top = '5px';
                            removeBtn.style.right = '20px';
                            removeBtn.style.cursor = 'pointer'; // Set cursor to pointer
                            removeBtn.onclick = function () {
                                removeImage(container, file);
                            };
                            container.appendChild(removeBtn);
    
                            imagesContainer.appendChild(container);
    
                            fileNames.push(file.name); 
                        };
                    })(file);
                    reader.readAsDataURL(file);
                }
            }
        }
    
        function removeImage(container, file){
            container.remove(); 
        }

         // ----------- all selected file names to appear inside the input field----------
         $(".custom-file-input").on("change", function() {
            var files = [];
            for (var i = 0; i < $(this)[0].files.length; i++) {
                files.push($(this)[0].files[i].name);
            }
            $(this).siblings(".custom-file-label").addClass("selected").html(files.join(", "));
        });
    </script>

