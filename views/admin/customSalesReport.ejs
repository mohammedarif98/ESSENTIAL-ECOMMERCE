


<!doctype html>
<html class="no-js" lang=""> 
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>E S S E N T I A L - ADMIN</title>
    <meta name="description" content="E S S E N T I A L  ADMIN">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="apple-touch-icon" href="https://i.imgur.com/QRAUqs9.png">
    <link rel="shortcut icon" href="https://i.imgur.com/QRAUqs9.png"> 

    <!-- jquery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Include Font Awesome library -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" rel="stylesheet">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/normalize.css@8.0.0/normalize.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/font-awesome@4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/lykmapipo/themify-icons@0.1.2/css/themify-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/pixeden-stroke-7-icon@1.2.3/pe-icon-7-stroke/dist/pe-icon-7-stroke.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/flag-icon-css/3.2.0/css/flag-icon.min.css">
    <link rel="stylesheet" href="/admin/asset/css/adminHome.css" type="text/css">
    

</head>

<body>
    <!-- Left Panel -->
    
    <%- include('./partials/admin/adminLeftSide.ejs') %>

    <!-- Right Panel -->
    <div id="right-panel" class="right-panel">

    <!-- Header-->
    <%- include('./partials/admin/adminHeader.ejs') %>

        <!-- Content -->
        <div class="content" style="margin-bottom: 7px;">
            <!-- Animated -->
            <div class="animated fadeIn" >
                
                <div class="clearfix"></div>
                <!-- Orders -->
                    <div class="card m-2">

                        <div class="card-body d-flex">
                            <div class="heading">
                                <h4 class="box-title">SALES REPORT MANAGMENT </h4>
                            </div>
                            <div class="col-search ml-auto">
                                <form class="searchform" method="get" action="/admin/reportView">
                                    <div class="input-group"> 
                                        <select class="form-select" id="period" name="period" placeholder="Search term" class="form-control" style="width: 200px;" >
                                            <option disabled selected value="">Select</option>
                                            <option value="day">day</option>
                                            <option value="week">week</option>
                                            <option value="month">month</option>
                                            <option value="year">year</option>
                                        </select>
                                        <button class="btn btn-dark btn-sm text-white mx-1" type="submit"><i class="bi bi-search"></i></button>
                                    </div>
                                </form>
                            </div>
                            <div class="ml-4" style="display: flex; justify-content: end;">
                                <a href="/admin/createSalesReport" class="btn btn-success btn-sm"><i class="fas fa-file-alt"></i> print report</a>
                              </div>
                        </div>

                        <div class="card-bodyew">
                            <div class="table-stats order-table ov-h">

                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th class="serial">Si-No</th>
                                            <th>Order-ID</th>
                                            <th>PAYMENT METHOD</th>
                                            <th>DISCOUNT</th>
                                            <th>COUPON NAME</th>
                                            <th>Total</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if ( report && report.length>0) { %>
                                            <% for(var i=0; i<report.length; i++) { %>
                                                <tr>
                                                    <td class="serial"><%= i+1 %></td>
                                                    <td><span class="">ODR<%= String(report[i]._id).slice(-10) %></span></td>
                                                    <td><span class="name"><%= report[i].paymentDetails %></span></td>
                                                    <td><span class="product"><%= report[i].discount %></span></td>
                                                    <td><span class="ount"><%= report[i].coupon %></span></td>
                                                    <td><span class="ount">&#8377;<%= report[i].totalAmount - report[i].discount %></span></td>
                                                </tr>
                                            <% } %>
                                        <% } else { %>
                                            <tr>
                                                <td colspan="7" class="text-center">No Report Found.</td>
                                            </tr>
                                            <% } %>
                                    </tbody>                                            
                                </table>
                                
                            </div> <!-- /.table-stats -->
                        </div>
                
                    </div>
                <!-- /.orders -->
                
            </div>
        </div>
        <!-- /.content -->

        <div class="clearfix"></div>

    </div>
    <!-- /#right-panel -->

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@2.2.4/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.4/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-match-height@0.7.2/dist/jquery.matchHeight.min.js"></script>
    <script src="/admin/asset/js/adminHome.js"></script>

</body>
</html>
