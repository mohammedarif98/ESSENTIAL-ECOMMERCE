



<!doctype html>
<html class="no-js" lang=""> 
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>E S S E N T I A L - ADMIN</title>
    <meta name="description" content="E S S E N T I A L  ADMIN">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="apple-touch-icon" href="https://i.imgur.com/QRAUqs9.png">
    <link rel="shortcut icon" href="https://i.imgur.com/QRAUqs9.png"> 

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/normalize.css@8.0.0/normalize.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/font-awesome@4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/lykmapipo/themify-icons@0.1.2/css/themify-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/pixeden-stroke-7-icon@1.2.3/pe-icon-7-stroke/dist/pe-icon-7-stroke.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/flag-icon-css/3.2.0/css/flag-icon.min.css">
    <link rel="stylesheet" href="/admin/asset/css/adminHome.css" type="text/css">
    

</head>

<body>
    <!-- Left Panel -->
    
    <%- include('./partials/admin/adminLeftSide.ejs') %>

    <!-- Right Panel -->
    <div id="right-panel" class="right-panel">

    <!-- Header-->
    <%- include('./partials/admin/adminHeader.ejs') %>

        <!-- Content -->
        <div class="content" style="margin-bottom: 447px;">
            <!-- Animated -->
            <div class="animated fadeIn" >
                
                <div class="clearfix"></div>
                <!-- Orders -->
                    <div class="card"  >
                        <div class="card-body row">
                            <div class="ml-3">
                                <h4 class="box-title">COUPON MANAGMENT</h4>
                            </div>
                            <div class="ml-auto mr-2">
                                <button  class="btn btn-success text-white " style="font-size:smaller;" data-toggle="modal" data-target="#modalCenter">
                                    <i class="menu-icon fa fa-plus"></i> COUPON</button>
                            </div>
                        </div>

                        <!-- Modal HTML For Adding Coupen -->
                            <div id="modalCenter" class="modal fade" tabindex="-1" role="dialog">
                                <div class="modal-dialog modal-dialog-centered" role="document" style="max-width: 600px;">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <div class="d-flex justify-content-between align-items-center w-100">
                                                <h5 class="modal-title text-center font-weight-bold text-dark">ADD COUPON</h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                        </div>
                                        <div class="modal-body">
                                            <div class="px-2 pb-2 row">
                                                <form action="/admin/addCoupon" method="post">
                                                    <div class="col-lg-12 mb-3 d-none">
                                                        <label class="form-label" for="couponId">Coupon Id:</label>
                                                        <input type="text" class="form-control" id="couponId" name="couponid" placeholder="Coupon id" readonly>
                                                    </div>
                                                    <div class="row mx-2">
                                                        <div class="mb-3 col-lg-12">
                                                            <label class="form-label" for="couponName">Coupon Name :</label>
                                                            <input type="text" class="form-control"  id="couponCode" name="couponcode" oninput="this.value = this.value.toUpperCase()" placeholder="Enter Coupon Code Name" required>
                                                        </div>
                                                    </div>
                                                    <div class="row mx-2">
                                                        <div class="mb-3 col-lg-4">
                                                            <label class="form-label" for="couponName">Expiry Date :</label>
                                                            <input type="date" class="form-control"  id="expirydate" name="expirydate" placeholder="" required>
                                                        </div>
                                                        <div class="mb-3 col-lg-4">
                                                            <label class="form-label" for="discount">Discount Amount :</label>
                                                            <input type="number" class="form-control" name="coupon_discount" id="discount" placeholder="" required>
                                                        </div>                                                           
                                                        <!-- <div class="mb-3 col-lg-4">
                                                            <label class="form-label" for="maxPrice"> Max Discount  :</label>
                                                            <input type="number" class="form-control" name="maxdiscount" id="maxPrice" placeholder="" required>
                                                        </div> -->
                                                        <div class="mb-3 col-lg-4">
                                                            <label class="form-label" for="minPrice"> Min Order Price  :</label>
                                                            <input type="number" class="form-control" name="minprice" id="minPrice" placeholder="" required>
                                                        </div>
                                                        <button type="submit" class="btn btn-dark m-2 w-100">ADD COUPON</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <!-- End Add Coupon Modal -->

                        <div class="card-body">
                            <div class="table-stats order-table ov-h">

                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th class="serial">Si-No</th>
                                            <th>Coupon Code</th>
                                            <th>Discount Amount</th>
                                            <th>Min Order Price</th>
                                            <!-- <th>Max Discount Price</th> -->
                                            <th>Expiry Date </th>
                                            <th>Status</th>
                                            <th>Operation</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if ( coupon && coupon.length>0) { %>
                                            <% for(var i=0; i<coupon.length; i++) { %>
                                                <tr>
                                                    <td class="serial"><%= i+1 %></td>
                                                    <td><span class=""><%= coupon[i].couponCode %></span></td>
                                                    <td><span class="name">&#8377;  <%= coupon[i].discount %></span></td>
                                                    <td><span class="product">&#8377; <%= coupon[i].minPrice %></span></td>
                                                    <!-- <td><span class="product">&#8377; <%#= coupon[i].maxDiscount %></span></td>  -->
                                                    <td><span class="product"><%= String(coupon[i].expiry).slice(0,15) %></span></td>  

                                                    <td class="">
                                                        <span id="status<%= coupon[i]._id %>" class="px-4 py-1 text-dark font-weight-bold <%= coupon[i].isListed ? 'alert-success' : 'alert-danger' %>">
                                                            <%= coupon[i].isListed ? 'True' : 'False' %>
                                                        </span>
                                                    </td>
                                                     
                                                    <td><span class="actions">

                                                        <button class="btn btn-danger btn-sm" style="width: 100px;">Update</button>

                                                        <% if (coupon[i].isListed) { %>
                                                            <button id="action<%= coupon[i]._id %>" class="btn btn-dark text-white btn-sm" style="width: 100px;" onclick="updateStatus('<%= coupon[i]._id %>')">UNLIST</button>
                                                        <% } else { %>
                                                            <button id="action<%= coupon[i]._id %>" class="btn btn-dark text-white btn-sm" style="width: 100px;" onclick="updateStatus('<%= coupon[i]._id %>')">LIST</button>                       
                                                        <% } %>
                                                    </span></td>
                                                </tr>

                                            <% } %>
                                        <% } else { %>
                                            <tr>
                                                <td colspan="7" class="text-center">No Coupons Available.</td>
                                            </tr>
                                        <% } %>
                                    </tbody>                                            
                                </table>
                                
                            </div> 
                        </div>
                    </div>               
            </div>
        </div>

        <div class="clearfix"></div>

    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@2.2.4/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.4/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-match-height@0.7.2/dist/jquery.matchHeight.min.js"></script>
    <script src="/admin/asset/js/adminHome.js"></script>
    <!-- jquery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        function couponModal(categoryId){
            $('#modalCenter').modal('show'); 
            // $('#categoryid').val(categoryId);
        }

        function updateStatus(cid){
            const couponAction = document.getElementById('action'+cid);
            const couponStatus = document.getElementById('status'+cid);
            $.ajax({
                method : 'POST',
                url : '/admin/softDeleteCoupon',
                data : { cid:cid },
                success : function(res){
                    if(res.listed){
                        couponAction.innerHTML = 'UNLIST'; 
                        couponAction.style.color = "white";
                        couponAction.style.width = "100px";
                        
                        couponStatus.innerHTML = 'True'; 
                        couponStatus.className = 'px-4 py-1 text-dark font-weight-bold alert-success'; 
                    } else if(res.unListed){
                        couponAction.innerHTML = 'LIST'; 
                        couponAction.style.color = "white";
                        couponAction.style.width = "100px";
                        
                        couponStatus.innerHTML = 'False'; 
                        couponStatus.className = 'px-4 py-1 text-dark font-weight-bold alert-danger'; 
                    }
                },
                error : function(status,error){
                    console.log(error);
                }
            });
        }

    </script>

</body>
</html>
